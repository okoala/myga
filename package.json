{
  "name": "okrrr",
  "version": "1.0.0",
  "description": "让网页浏览体验更方便有趣, 支持语雀、B站、Youtube 等有趣的功能",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:hmr": "rollup --config scripts/reload/rollup.config.mjs",
    "pack-zip": "sh ./scripts/build-zip.sh",
    "pack-crx": "node ./scripts/build-crx.js && sh ./scripts/zip-crx.sh",
    "wss": "node scripts/reload/initReloadServer.js",
    "dev": "tnpm run build:hmr && run-p wss build:watch",
    "lint:js": "eslint . --fix",
    "lint:less": "stylelint --fix ./**/*.less -s less",
    "lint": "npm run lint:js && npm run lint:less",
    "lint-staged": "lint-staged",
    "contributor": "git-contributor"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "antd": "^5.7.3",
    "construct-style-sheets-polyfill": "3.1.0",
    "eventemitter3": "^4.0.0",
    "ajv": "^8.12.0",
    "ajv-keywords": "^5.1.0",
    "lodash": "^4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "0.10.0",
    "whatwg-fetch": "^3.6.17",
    "copy-text-to-clipboard": "^3.2.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.6.7",
    "@rollup/plugin-typescript": "11.1.5",
    "@types/chrome": "0.0.248",
    "@types/lodash": "^4",
    "@types/node": "20.8.10",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@vitejs/plugin-react": "2.2.0",
    "chokidar": "3.5.3",
    "cross-env": "7.0.3",
    "eslint": "^7",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-babel": "^5.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "7.20.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "git-contributor": "^2.1.5",
    "husky": "4",
    "less": "^4.1.3",
    "lint-staged": "^13.2.3",
    "npm-run-all": "4.1.5",
    "prettier": "^2.8.4",
    "rollup": "4.3.0",
    "stylelint": "^12.0.1",
    "typescript": "5.2.2",
    "vite": "3.2.7",
    "vite-plugin-svgr": "^4.2.0",
    "ws": "8.14.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.less": [
      "stylelint --fix -s less"
    ]
  },
  "author": "chaogui.hcg",
  "license": "MIT",
  "repository": "git@github.com:okoala/myga.git"
}
